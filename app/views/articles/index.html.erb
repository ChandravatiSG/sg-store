<h1>Listing articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.name %></td>
        <td><%= article.price %></td>
        <td><%= link_to 'Show', article, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), :class => "btn btn-default" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, :class => "btn btn-primary" %>